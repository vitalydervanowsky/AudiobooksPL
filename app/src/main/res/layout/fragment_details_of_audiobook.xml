<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailsOfAudiobookFragment">

    <ImageView
        android:id="@+id/iv_book_cover"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/cover_of_the_audiobook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_book_cover" />

    <TextView
        android:id="@+id/tv_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_book_author" />

    <TextView
        android:id="@+id/tv_book_kind_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rodzaj"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_book_kind"
        app:layout_constraintEnd_toStartOf="@id/tv_book_kind_center" />

    <TextView
        android:id="@+id/tv_book_kind_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_book_title" />

    <TextView
        android:id="@+id/tv_book_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_book_kind_center"
        app:layout_constraintStart_toEndOf="@id/tv_book_kind_center" />

    <TextView
        android:id="@+id/tv_book_genre_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gatunek"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_book_genre"
        app:layout_constraintEnd_toStartOf="@id/tv_book_genre_center" />

    <TextView
        android:id="@+id/tv_book_genre_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_book_kind" />

    <TextView
        android:id="@+id/tv_book_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_book_genre_center"
        app:layout_constraintStart_toEndOf="@id/tv_book_genre_center" />

</androidx.constraintlayout.widget.ConstraintLayout>